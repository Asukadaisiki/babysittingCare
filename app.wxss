/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局响应式样式 */
page {
  min-height: 100%;
  background-color: #f8f8f8;
}

/* 通用flex布局 */
.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* 通用间距 */
.margin-sm {
  margin: 20rpx;
}

.margin-md {
  margin: 40rpx;
}

.margin-lg {
  margin: 60rpx;
}

/* 通用内边距 */
.padding-sm {
  padding: 20rpx;
}

.padding-md {
  padding: 40rpx;
}

.padding-lg {
  padding: 60rpx;
} 
/* custom-tabbar.wxss */
.custom-tabbar {
    height: 120rpx;        /* 整体高度增加 */
    display: flex;
    background: #fff;
    padding-bottom: env(safe-area-inset-bottom); /* 适配全面屏底部安全区域 */
  }
  
  .tab-item {
    flex: 1;
    display: flex;
    flex-direction: column;  /* 垂直排列图标和文字 */
    align-items: center;
    justify-content: center; /* 垂直居中 */
  }
  
  .tab-icon {
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 8rpx;      /* 图标和文字之间的间距 */
  }
  
  .tab-text {
    font-size: 24rpx;
    margin-bottom: 20rpx;     /* 重点：增加文字到底部的距离 */
  }
/* custom-tabbar.wxss */