/* pages/baby-info/baby-info.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 宝宝选择器样式 */
.child-selector {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.selector-title {
  font-size: 28rpx;
  color: #666;
}

.child-list {
  display: flex;
  white-space: nowrap;
  height: 160rpx;
}

.child-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  padding: 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.child-item.active {
  background-color: #f0f9ff;
}

.child-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 10rpx;
}

.child-avatar.boy {
  background-color: #4dabf7;
}

.child-avatar.girl {
  background-color: #f783ac;
}

.child-name {
  font-size: 24rpx;
  color: #333;
}

/* 信息卡片样式 */
.info-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

/* 生长记录样式 */
.growth-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.growth-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.growth-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
}

.growth-label {
  color: #666;
  font-size: 28rpx;
}

.growth-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.growth-date {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 无宝宝信息提示 */
.no-child-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.tip-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.add-child-btn {
  background-color: #4dabf7;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  border-radius: 30rpx;
}

/* 图表区域样式 */
.chart-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.chart-tabs {
  display: flex;
  margin-bottom: 20rpx;
}

.chart-tab {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 3rpx solid transparent;
  margin-right: 20rpx;
}

.chart-tab.active {
  color: #4dabf7;
  border-bottom-color: #4dabf7;
}

.f2-chart {
  width: 100%;
  height: 500rpx;
}