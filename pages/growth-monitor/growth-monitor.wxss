.container {
  padding: 20rpx;
  background-color: #FFFCF9; /* 奶白色背景 */
  min-height: 100vh;
}

/* 儿童选择器样式 */
.child-selector {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.selector-title {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 15rpx;
  display: flex;
  justify-content: center;
}

.child-list {
  white-space: nowrap;
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding: 10rpx 0;
}

.child-item {
  display: inline-block;
  margin-right: 30rpx;
  text-align: center;
}

.child-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: white;
  margin-bottom: 10rpx;
  transition: transform 0.3s;
}

.child-avatar.boy {
  background-color: #74B9FF; /* 男孩蓝色 */
}

.child-avatar.girl {
  background-color: #FF9FF3; /* 女孩粉色 */
}

.child-item.active .child-avatar {
  transform: scale(1.1);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.child-name {
  font-size: 26rpx;
  color: #333;
}

/* 年龄信息样式 */
.age-info {
  display: flex;
  justify-content: center;
  flex-direction: row;
  padding: 30rpx;
  background-color: #FFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.age-item {
  text-align: center;
  margin: 10rpx;
}

.age-label {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.age-value {
  font-size: 40rpx;
  color: #333;
  font-weight: 500;
}

.age-tip {
  font-size: 15rpx;
  color: #999;
  margin-top: 6rpx;
}

/* 图表标签页样式 */
.chart-tabs {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.tab-item {
  padding: 15rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #888;
}

.tab-item.active {
  color: #FF7675; /* 主题色 */
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #FF7675;
  border-radius: 3rpx;
}

/* 图表容器样式 */
.chart-container {
  background-color: #FFF;
  border-radius: 0 0 16rpx 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.chart-legend {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.legend-color {
  width: 24rpx;
  height: 8rpx;
  margin-right: 8rpx;
  border-radius: 4rpx;
}

.legend-color.user-data {
  background-color: #FF7675;
}

.legend-color.who-standard {
  background-color: #74B9FF;
}

.chart-wrapper {
  width: 100%;
  height: 400rpx;
}

.no-data-tip {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #999;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
}

/* 添加记录按钮样式 */
.add-record-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFEAA7; /* 鹅黄色 */
  color: #333;
  padding: 20rpx 0;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  font-size: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.add-record-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

/* 添加记录表单样式 */
.add-form-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.add-form {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFF;
  border-radius: 30rpx 30rpx 0 0;
  padding: 40rpx 30rpx;
  z-index: 101;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.add-form.show {
  transform: translateY(0);
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.form-item input, .form-item picker {
  background-color: #F8F9FA;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
}

.form-item picker {
  display: block;
}

.picker {
  color: #333;
}

.picker.placeholder {
  color: #999;
}

.form-tip {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
  text-align: center;
}

.submit-btn {
  background-color: #FF7675; /* 主题色 */
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}

/* 历史记录列表样式 */
.records-list {
  background-color: #FFF;
  border-radius: 16rpx;
  padding: 30rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.header-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.record-count {
  font-size: 26rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.record-date {
  font-size: 28rpx;
  color: #333;
  width: 180rpx;
}

.record-data {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  display: flex;
  flex-direction: column;
}

.record-data text {
  margin-bottom: 6rpx;
}

.delete-btn {
  font-size: 26rpx;
  color: #FF7675;
  padding: 10rpx 20rpx;
}