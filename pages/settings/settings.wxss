
/* 登录区域样式 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background-color: #f8c4b4;
  width: 100%;
}

.avatar-container {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100%;
  height: 100%;
}

.login-text {
  font-size: 32rpx;
  color: #333;
}

/* 设置列表样式 */
.settings-list {
  width: 100%;
  margin-top: 30rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #f8d7cb;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.arrow {
  color: #999;
  font-size: 32rpx;
}