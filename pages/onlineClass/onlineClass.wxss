.search-box {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    border-radius: 40rpx;
    padding: 15rpx 25rpx;
    margin: 20rpx 15rpx 30rpx;
    border: 1rpx solid #f0f0f0;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  .search-box icon {
    color: #999;
  }
  
  .search-box input {
    flex: 1;
    height: 70rpx;
    margin: 0 20rpx;
    font-size: 28rpx;
    color: #333;
  }
  
  /* 推荐区域标题样式优化 */
  .section-title {
    font-size: 34rpx;
    font-weight: bold;
    margin: 30rpx 20rpx 20rpx;
    color: #333;
    position: relative;
    padding-left: 20rpx;
  }
  
  .section-title::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 8rpx;
    height: 30rpx;
    background: linear-gradient(to bottom, #ff9a9e, #fad0c4);
    border-radius: 4rpx;
  }


.swiper {
  width: 100%;
  height: 320rpx;
}

.card-group {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  height: 100%;
  box-sizing: border-box;
}

/* 单张卡片容器样式 */
.single-card-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  padding: 20rpx;
}

.single-card {
  width: 80%;
  height: 280rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.single-card-image {
  width: 100%;
  height: 180rpx;
  background-color: #f5f5f5;
}

.single-card-title {
  display: block;
  font-size: 28rpx;
  padding: 15rpx;
  color: #333;
  height: 85rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.card-image {
  width: 100%;
  height: 160rpx;
  background-color: #f0f0f0; /* 添加背景色以便于调试 */
}

.card-title {
  font-size: 26rpx;
  padding: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
  