/* pages/growth/index.wxss */
/* 顶部栏 */
.header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background: #4a90e2;
    color: #fff;
    padding: 16rpx 24rpx;
    font-size: 32rpx;
  }
  .header-center {
    flex: 1;
    text-align: center;
    font-weight: bold;
  }
  .header-left, .header-right {
    width: 120rpx;
    text-align: center;
  }
  
  /* 按钮组 */
  .btn-group {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin: 24rpx 0;
  }
  .btn {
    background: #7ed6df;
    color: #fff;
    border: none;
    border-radius: 12rpx;
    padding: 12rpx 32rpx;
    font-size: 28rpx;
  }
  .btn-add {
    background: #4a90e2;
  }
  
  /* 图表标题栏 */
  .chart-title-bar {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin: 16rpx 0 0 0;
  }
  .chart-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-right: 12rpx;
  }
  .icon-refresh {
    font-size: 28rpx;
    color: #888;
  }
  
  /* 图表容器 */
  .chart-container {
    width: 100%;
    height: 800rpx;
  }
  ec-canvas {
    width: 100%;
    height: 400rpx;
  }
  
  /* 图例栏 */
  .legend-bar {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin: 12rpx 0 0 0;
  }
  .legend-item {
    display: flex;
    align-items: center;
    margin: 0 16rpx;
    font-size: 24rpx;
  }
  .legend-circle {
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    margin-right: 8rpx;
    border: 2rpx solid #bbb;
  }
  .p97 { border-color: #b71c1c; }
  .p85 { border-color: #7cb342; }
  .p50 { border-color: #ffd600; }
  .p15 { border-color: #ff8a65; }
  .p3  { border-color: #039be5; }
  .user { background: #d32f2f; border: none; }
  
  /* 说明链接 */
  .desc-link {
    color: #4a90e2;
    text-align: center;
    margin: 12rpx 0 0 0;
    font-size: 24rpx;
    text-decoration: underline;
  }
  
  /* 表单栏 */
  .form-bar {
    margin: 24rpx 0 0 0;
    padding: 0 32rpx;
  }
  .form-item {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
  }
  .input {
    flex: 1;
    border: 1rpx solid #ccc;
    border-radius: 8rpx;
    padding: 8rpx 16rpx;
    margin-left: 12rpx;
    font-size: 28rpx;
  }
  
  /* 提交按钮 */
  .btn-submit {
    width: 90%;
    margin: 32rpx auto;
    background: #4a90e2;
    color: #fff;
    border: none;
    border-radius: 12rpx;
    font-size: 32rpx;
    padding: 18rpx 0;
    text-align: center;
  }