/* pages/home/home.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 20px;
}

.header {
  margin-bottom: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
}

.chart-container {
  margin: 20px 0;
}

.growth-chart {
  width: 100%;
  height: 300px;
}

.data-section {
  margin-top: 20px;
}

.data-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.comparison {
  color: #666;
}

.legend {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 15px;
}

.color-box {
  width: 15px;
  height: 15px;
  margin-right: 5px;
}