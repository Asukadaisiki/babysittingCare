.feature-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 34rpx;
    font-weight: bold;
    margin: 20rpx 20rpx 20rpx;
    color: #333;
    position: relative;
    padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  height: 30rpx;
  width: 8rpx;
  background-color: #FF9FF3;
  border-radius: 4rpx;
}


.feature-item {
  background-color: #FFF;
  border-radius: 16rpx;
  padding: 30rpx;
  display: block;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s;
}

.feature-item:active {
  transform: scale(0.98);
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
