.welcome-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.welcome-text {
  display: flex;
  align-items: baseline;
}

.greeting {
  font-size: 32rpx;
  color: #666;
}

.user-name {
  font-size: 30rpx;
