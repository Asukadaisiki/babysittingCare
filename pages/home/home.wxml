<!-- pages/home/home.wxml -->
<view class="container">
  <!-- 顶部欢迎区域 -->
  <view class="welcome-section">
    <view class="welcome-text">
      <text class="greeting">您好，</text>
      <text class="user-name">{{userName}}</text>
    </view>
    <view class="date-info">{{currentDate}}</view>
  </view>

  <!-- 宝宝信息卡片 -->
  <view class="child-card" wx:if="{{hasChild}}" style="width: 515rpx; display: flex; box-sizing: border-box">
    <view class="child-info">
      <view class="child-avatar {{childInfo.gender === '男' ? 'boy' : 'girl'}}">
        {{childInfo.name[0]}}
      </view>
      <view class="child-details">
        <view class="child-name">{{childInfo.name}}</view>
        <view class="child-age">{{childAge}}个月</view>
      </view>
    </view>
    <view class="child-status" style="position: relative; left: 8rpx; top: 0rpx">
      <text>宝宝状态良好</text>
    </view>
  </view>

  <!-- 功能区域 -->
  <view class="feature-section">
    <view class="section-title" style="position: relative; left: -20rpx; top: 20rpx">育儿助手</view>
    <view class="feature-item" bindtap="navigateToGrowthMonitor" style="width: 515rpx; display: block; box-sizing: border-box; position: relative; left: 0rpx; top: 8rpx">
      <view class="feature-icon growth-icon"></view>
      <view class="feature-name">生长监测</view>
    </view>
  </view>

  <!-- 育儿知识区域 -->
  <view class="knowledge-section">
    <view class="section-title">育儿知识</view>
    
    <view class="knowledge-card" style="position: relative; left: 0rpx; top: -13rpx">
      <view class="knowledge-title">宝宝成长里程碑</view>
      <view class="knowledge-desc">了解宝宝在不同月龄应该达到的发育指标</view>
      <view class="knowledge-tag">发育指南</view>
    </view>
    
    <view class="knowledge-card">
      <view class="knowledge-title">科学添加辅食指南</view>
      <view class="knowledge-desc">4-6个月宝宝如何正确添加辅食</view>
      <view class="knowledge-tag">喂养指南</view>
    </view>
  </view>

  <!-- 无宝宝信息提示 -->
  <view class="no-child-tip" wx:if="{{!hasChild}}">
    <view class="tip-icon"></view>
    <view class="tip-text">您还没有添加宝宝信息</view>
    <button class="add-child-btn" bindtap="navigateToInfoCollection">添加宝宝</button>
  </view>
</view>