/* pages/appointment-setting/appointment-setting.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-group {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
  color: #333;
}

.picker {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
  color: #333;
  line-height: 80rpx;
}

.placeholder {
  color: #999;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333;
  padding: 20rpx;
  box-sizing: border-box;
}

.subscription-tip {
  display: flex;
  align-items: center;
  background-color: #f0f9ff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.tip-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #4dabf7;
  border-radius: 50%;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #4dabf7;
  flex: 1;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.cancel-btn, .save-btn {
  width: 45%;
  height: 88rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: #f1f3f5;
  color: #666;
}

.save-btn {
  background-color: #4dabf7;
  color: #fff;
}