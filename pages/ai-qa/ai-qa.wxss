/* pages/ai-qa/ai-qa.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0;
  background-color: #f8f8f8;
}

/* 聊天容器 */
.chat-container {
  flex: 1;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.message-list {
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 消息样式 */
.message {
  display: flex;
  margin-bottom: 30rpx;
  max-width: 90%;
}

.message.user {
  align-self: flex-end;
  flex-direction: row-reverse;
}

.message.ai {
  align-self: flex-start;
}

.avatar-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #ffffff;
  flex-shrink: 0;
  display: flex;
  flex-direction: column-reverse;
}

.avatar {
  width: 100%;
  height: 100%;
}

.message-content {
  margin: 0 20rpx;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  max-width: 70%;
  word-wrap: break-word;
}

.message.user .message-content {
  background-color: #f8c4b4;
  color: #333;
}

.message.ai .message-content {
  background-color: #f8d7cb;
  color: #333;
}

/* 加载动画 */
.loading {
  position: relative;
}

/* 输入区域 */
.input-container {
  display: flex;
  padding: 20rpx 30rpx;
  padding-bottom: 100rpx; /* 增加底部padding，避免被tabbar遮挡 */
  background-color: #fff;
  border-top: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
  position: relative; /* 确保定位正确 */
}

.message-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-button {
  width: 120rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #ccc;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.send-button.active {
  background-color: #f8c4b4;
}