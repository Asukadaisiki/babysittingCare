.container {
  padding: 60rpx 40rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.form-group {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  width: 90%;
  max-width: 800rpx;
  position: relative;
}

.delete-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 100%;
  height: 100%;
  color: #ff4d4f;
}

.form-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 50rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input {
  width: 90%;
  height: 96rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #333;
}

.picker {
  width: 90%;
  height: 96rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 96rpx;
}

.placeholder {
  color: #999;
}

.button-group {
  width: 90%;
  max-width: 800rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.add-btn {
  width: 100%;
  height: 88rpx;
  background-color: #2196F3;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn:active,
.submit-btn:active {
  opacity: 0.8;
}