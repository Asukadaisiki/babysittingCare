
.container {
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .chart-title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .f2-chart {
      width: 100%;
      height: 500rpx;
    }
    
  .chart-container {
    width: 100%;
    height: 300px;
    margin: 10px 0;
  }
  
  .chart-info {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .chart-info text {
    margin: 10rpx 0;
    color: #666;
  }

  /* 添加记录按钮样式 */
  .add-record-btn {
    background-color: #FF6B6B;
    color: white;
    border-radius: 40rpx;
    padding: 20rpx 30rpx;
    font-size: 30rpx;
    margin: 30rpx auto;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
    width: 80%;
  }
  
  .btn-icon {
    font-size: 36rpx;
    margin-right: 10rpx;
  }
  
  /* 添加记录表单样式 */
  .add-form-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 100;
  }
  
  .add-form {
    position: fixed;
    bottom: -100%;
    left: 0;
    right: 0;
    background-color: #FFF;
    border-radius: 30rpx 30rpx 0 0;
    z-index: 101;
    padding: 40rpx 30rpx;
    transition: bottom 0.3s;
    display: flex;
    flex-direction: column;
    gap: 8rpx;
  }
  
  .add-form.show {
    bottom: 90rpx;
  }
  
  .form-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .form-title {
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
  }
  
  .close-btn {
    font-size: 40rpx;
    color: #999;
  }
  
  .form-item {
    margin-bottom: 30rpx;
  }
  
  .form-label {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 10rpx;
    display: block;
  }
  
  .picker, input {
    background-color: #F5F5F5;
    padding: 20rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
    color: #333;
  }
  
  .form-tip {
    font-size: 24rpx;
    color: #999;
    text-align: center;
    margin-bottom: 20rpx;
  }
  
  .submit-btn {
    background-color: #FF6B6B;
    color: white;
    border-radius: 40rpx;
    font-size: 30rpx;
    margin-top: 20rpx;
  }
  
  /* 历史记录列表样式 */
  .records-list {
    background-color: #FFF;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-top: 30rpx;
    width: 90%;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  }
  
  .list-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .header-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .record-count {
    font-size: 26rpx;
    color: #999;
  }
  
  .empty-tip {
    text-align: center;
    padding: 40rpx 0;
    color: #999;
    font-size: 28rpx;
  }
  
  .record-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .record-date {
    font-size: 28rpx;
    color: #666;
    width: 180rpx;
  }
  
  .record-data {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .record-data text {
    font-size: 26rpx;
    color: #333;
    margin-bottom: 6rpx;
  }
  
  .delete-btn {
    font-size: 26rpx;
    color: #FF6B6B;
    padding: 10rpx 20rpx;
    border: 1rpx solid #FF6B6B;
    border-radius: 30rpx;
  }
  
  .back-button {
    width: 80%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #1890FF;
    color: white;
    border-radius: 10rpx;
    margin-top: 20rpx;
  }